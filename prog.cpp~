#include<iostream>
#include<stdlib.h>
using namespace std;

struct node
{
	int d;
	struct node *llink, *rlink;
};

class BST
{
	public:
	node *st;
	st=NULL;
	void ins(void);
	void disp(void);
};

void BST::ins(void)
{
	int greater=0,n, f=0;
	struct node *par=NULL;
	struct node *temp, *trav;
	char ch;
	trav=st;
	do
	{
	temp=new node;
	cout<<"\nEnter the data for new node: ";
	cin>>n;
	if(st==NULL)
	{
		temp->d=n;
		temp->llink=NULL;
		temp->rlink=NULL;
	}
		
	else
	{
			do{
		temp->d=n;
		while(trav!=NULL)
		{
			if(trav->d==n)
			{
				cout<<"\nNode already exists";
				break;
				f=0;
			}
			else
			{
			if(n<trav->d)
			{
				trav=trav->llink;
				par=trav;
				greater=0;
			}
			else
			{
				trav=trav->rlink;
				par=trav;
				greater=1;
			}
			}
		}
		if(greater==0 && f)par->llink=temp;
		if(greater==1 && f) par->rlink=temp;
		cout<<"\nWant to enter more nodes?";
		cin>>ch;
	}while(tolower(ch)=='y');
}

}
}
void BST::disp(void)
{
	struct node *st2;
	st2=st;
	while(st2!=NULL)
	{
		disp(st2->llink);
		cout<<st2->d<<" ";
		disp(st2->rlink);
	}
}

int main(void)
{
	BST ob;
	ob.ins();
	ob.disp();
}